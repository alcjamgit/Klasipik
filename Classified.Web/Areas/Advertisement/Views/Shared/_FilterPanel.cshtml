

<div class="panel panel-default">
    <div class="panel-heading">
        Filters
    </div>
    <div class="panel-body">
        <form action="/" method="post">
            <div class="form-group">
                <label for="exampleInputEmail1">Search Keyword</label>
                <input type="text" class="form-control" id="keyword" placeholder="Search Keyword">
            </div>
            <div class="form-group">
                <label for="Location">Location</label>
                <select class="selectpicker dropdown" name="Location" data-width="100%" data-live-search="true" multiple>
                    <optgroup label="Metro Manila">
                        <option>Entire Metro Manila</option>
                        <option>Makati</option>
                        <option>Taguig</option>
                        <option>Quezon City</option>
                        <option>Pasay</option>
                        <option>Pasig</option>
                    </optgroup>
                </select>
            </div>
            <div class="form-group">
                <label for="Location">Categories</label>
                <select class="selectpicker dropdown" name="Location" data-width="100%" data-live-search="true" multiple>
                    <optgroup label="Consumer Electronics">
                        <option>Laptops</option>
                        <option>Desktops</option>
                        <option>Tablet</option>
                        <option>Smart Phones</option>
                    </optgroup>
                    <optgroup label="Dress">
                        <option>T-Shirt</option>
                        <option>Pants</option>
                        <option>Gowns</option>
                    </optgroup>
                </select>
            </div>
            <div class="form-group">
                <label>Price</label>
                <div class="row">
                    <span class="no-side-padding">
                        <span class="col-xs-6"><input type="number" value="" class="form-control" placeholder="From"></span>
                        <span class="col-xs-6"><input type="number" value="" class="form-control" placeholder="To"></span>
                    </span>

                </div>
            </div>
            <button type="button" class="btn btn-primary btn-block">Apply Filter</button>
        </form>
    </div>

</div>

