@section scripts{
    <script>
        //Apply navbar box-shadow after scrolling past the full-width container
        $(function () {
            $(document).on('scroll', function () {
                console.log('scroll top : ' + $(window).scrollTop());
                if ($(window).scrollTop() >= $(".full-width-container").height()) {
                    //alert("reached");
                    $(".navbar").addClass("shadow");
                }

                if ($(window).scrollTop() < $(".full-width-container").height()) {
                    //alert("below");
                    $(".navbar").removeClass("shadow");
                }
            });
        });
    </script>  
    }